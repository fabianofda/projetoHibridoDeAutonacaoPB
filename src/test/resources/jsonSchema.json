{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "suite": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zipcode": {
          "type": "string",
          "pattern": "^[0-9]{5}(-[0-9]{4})?$"
        },
        "geo": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "string",
              "pattern": "^-?\\d+(\\.\\d+)?$"
            },
            "lng": {
              "type": "string",
              "pattern": "^-?\\d+(\\.\\d+)?$"
            }
          },
          "required": ["lat", "lng"]
        }
      },
      "required": ["street", "city", "zipcode", "geo"]
    },
    "phone": {
      "type": "string",
      "pattern": "^[0-9-+()x ]+$"
    },
    "website": {
      "type": "string",
      "format": "uri"
    },
    "company": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "catchPhrase": {
          "type": "string"
        },
        "bs": {
          "type": "string"
        }
      },
      "required": ["name", "catchPhrase", "bs"]
    }
  },
  "required": ["id", "name", "username", "email", "address", "phone", "website", "company"]
}
